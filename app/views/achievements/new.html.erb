<%= simple_form_for @achievement do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :privacy, collection: Hash[Achievement.privacies.map { |k,v| [ k.split(',').first.capitalize, k ]}] %>
  <%= f.input :featured, label: 'feature achievement' %>
  <%= f.input :cover_image, as: :file %>
  <%= f.submit 'create achievement', class: 'btn btn-primary' %>
<% end %>
